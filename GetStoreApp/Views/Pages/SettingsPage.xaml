                                <ToggleMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnInstallModeSelectClicked}"
                                    IsChecked="{x:Bind InstallMode.Key.Equals(InstallModeList[0].Key), Mode=OneWay}"
                                    Tag="0"
                                    Text="{x:Bind sys:Convert.ToString(InstallModeList[0].Value)}" />

                                <ToggleMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnInstallModeSelectClicked}"
                                    IsChecked="{x:Bind InstallMode.Key.Equals(InstallModeList[1].Key), Mode=OneWay}"
                                    Tag="1"
                                    Text="{x:Bind sys:Convert.ToString(InstallModeList[1].Value)}" />
