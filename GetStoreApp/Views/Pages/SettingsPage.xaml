                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanupDescription')}"
                                    Visibility="{x:Bind TraceCleanupDescription.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        MinWidth="100"
