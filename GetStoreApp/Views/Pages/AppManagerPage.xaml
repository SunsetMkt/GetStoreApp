                                                        Grid.Column="0"
                                                        MinWidth="50"
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind DisplayName}"
                                                        TextAlignment="Left"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Content="{x:Bind DisplayName}"
                                                                Visibility="{Binding ElementName=DependencyNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        x:Name="DependencyPublisherText"
                                                        Grid.Column="1"
                                                        MinWidth="50"
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind PublisherName}"
                                                        TextAlignment="Left"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Content="{x:Bind PublisherName}"
                                                                Visibility="{Binding ElementName=DependencyPublisherText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        x:Name="DependencyVersionText"
                                                        Grid.Column="2"
                                                        MinWidth="50"
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind Version}"
                                                        TextAlignment="Left"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Content="{x:Bind Version}"
                                                                Visibility="{Binding ElementName=DependencyVersionText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <HyperlinkButton
                                                        Grid.Column="4"
                                                        Margin="10,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Command="{StaticResource ShowMoreCommand}"
                                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                                        Style="{StaticResource HyperlinkButtonStyle}"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}">

                                                        <HyperlinkButton.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock
                                                                    x:Name="MoreText"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                                    TextTrimming="CharacterEllipsis"
                                                                    TextWrapping="NoWrap">

                                                                    <ToolTipService.ToolTip>
                                                                        <ToolTip
                                                                            MaxWidth="9999"
                                                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                                            Visibility="{Binding ElementName=MoreText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                                    </ToolTipService.ToolTip>
                                                                </TextBlock>

                                                                <AnimatedIcon
                                                                    Width="12"
                                                                    Height="12"
                                                                    Margin="8,0,0,0"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Center"
                                                                    AutomationProperties.AccessibilityView="Raw">
                                                                    <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                                    <AnimatedIcon.FallbackIconSource>
                                                                        <FontIconSource
                                                                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                            FontSize="8"
                                                                            Glyph="&#xE96E;"
                                                                            IsTextScaleFactorEnabled="False" />
                                                                    </AnimatedIcon.FallbackIconSource>
                                                                </AnimatedIcon>
                                                            </StackPanel>
                                                        </HyperlinkButton.Content>

                                                        <FlyoutBase.AttachedFlyout>
                                                            <MenuFlyout Placement="Bottom">
                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource OpenStoreCommand}"
                                                                    CommandParameter="{x:Bind Package}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenStore')}" />

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource OpenFolderCommand}"
                                                                    CommandParameter="{x:Bind Package}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenFolder')}" />

                                                                <MenuFlyoutSeparator />

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource CopyDependencyNameCommand}"
                                                                    CommandParameter="{x:Bind DisplayName}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/CopyDependencyName')}" />

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource CopyDependencyInformationCommand}"
                                                                    CommandParameter="{x:Bind Package}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/CopyDependencyInformation')}" />
                                                            </MenuFlyout>
                                                        </FlyoutBase.AttachedFlyout>
                                                    </HyperlinkButton>
                                                </Grid>
                                            </ItemContainer>
                                        </DataTemplate>
                                    </ItemsView.ItemTemplate>
                                </ItemsView>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
