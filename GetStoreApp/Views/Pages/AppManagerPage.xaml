<Page
    x:Class="GetStoreApp.Views.Pages.AppManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:appManager="using:GetStoreApp.Models.Controls.AppManager"
    xmlns:applicationModel="using:Windows.ApplicationModel"
    xmlns:collection="using:System.Collections"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="BreadcrumbBarChevronFontSize">16</x:Double>
        <Thickness x:Key="BreadcrumbBarChevronPadding">8,0</Thickness>

        <XamlUICommand x:Name="CopyAUMIDCommand" ExecuteRequested="{x:Bind OnCopyAUMIDExecuteRequested}" />
        <XamlUICommand x:Name="CopyDependencyInformationCommand" ExecuteRequested="{x:Bind OnCopyDependencyInformationExecuteRequested}" />
        <XamlUICommand x:Name="CopyDependencyNameCommand" ExecuteRequested="{x:Bind OnCopyDependencyNameExecuteRequested}" />
        <XamlUICommand x:Name="LaunchCommand" ExecuteRequested="{x:Bind OnLaunchExecuteRequested}" />
        <XamlUICommand x:Name="OpenAppCommand" ExecuteRequested="{x:Bind OnOpenAppExecuteRequested}" />
        <XamlUICommand x:Name="OpenCacheFolderCommand" ExecuteRequested="{x:Bind OnOpenCacheFolderExecuteRequested}" />
        <XamlUICommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <XamlUICommand x:Name="OpenInstalledFolderCommand" ExecuteRequested="{x:Bind OnOpenInstalledFolderExecuteRequested}" />
        <XamlUICommand x:Name="OpenManifestCommand" ExecuteRequested="{x:Bind OnOpenManifestExecuteRequested}" />
        <XamlUICommand x:Name="OpenStoreCommand" ExecuteRequested="{x:Bind OnOpenStoreExecuteRequested}" />
        <XamlUICommand x:Name="PinToDesktopCommand" ExecuteRequested="{x:Bind OnPinToDesktopExecuteRequested}" />
        <XamlUICommand x:Name="PinToStartScreenCommand" ExecuteRequested="{x:Bind OnPinToStartScreenExecuteRequested}" />
        <XamlUICommand x:Name="PinToTaskbarCommand" ExecuteRequested="{x:Bind OnPinToTaskbarExecuteRequested}" />
        <XamlUICommand x:Name="ShowMoreCommand" ExecuteRequested="{x:Bind OnShowMoreExecuteRequested}" />
        <XamlUICommand x:Name="UnInstallCommand" ExecuteRequested="{x:Bind OnUnInstallExecuteRequested}" />
        <XamlUICommand x:Name="ViewInformationCommand" ExecuteRequested="{x:Bind OnViewInformationExecuteRequested}" />

        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />
    </Page.Resources>

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,15,30,0"
            ColumnSpacing="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <BreadcrumbBar
                VerticalAlignment="Center"
                ItemClicked="{x:Bind OnItemClicked}"
                ItemsSource="{x:Bind BreadCollection, Mode=OneWay}">

                <BreadcrumbBar.ItemTemplate>
                    <DataTemplate x:DataType="collection:DictionaryEntry">
                        <BreadcrumbBarItem Content="{Binding}">
                            <BreadcrumbBarItem.ContentTemplate>
                                <DataTemplate x:DataType="collection:DictionaryEntry">
                                    <TextBlock FontSize="18" Text="{x:Bind Value}" />
                                </DataTemplate>
                            </BreadcrumbBarItem.ContentTemplate>
                        </BreadcrumbBarItem>
                    </DataTemplate>
                </BreadcrumbBar.ItemTemplate>
            </BreadcrumbBar>

            <AutoSuggestBox
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PlaceholderText="{x:Bind root:ResourceService.GetLocalized('AppManager/PlaceHolderText')}"
                QuerySubmitted="{x:Bind OnQuerySubmitted}"
                Text="{x:Bind SearchText, Mode=OneWay}"
                TextChanged="{x:Bind OnTextChanged}"
                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 1), Mode=OneWay}">

                <AutoSuggestBox.QueryIcon>
                    <FontIcon FontSize="14" Glyph="&#xE71E;" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>

            <Button
                Grid.Column="2"
                Click="{x:Bind OnInstalledAppsClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('AppManager/InstalledApps')}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/InstalledAppsToolTip')}"
                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 1), Mode=OneWay}" />
        </Grid>

        <Grid Grid.Row="1" Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 1), Mode=OneWay}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Height="66"
                Margin="30,5,30,0"
                Padding="16,8,2,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE74C;" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Operation')}" />
                <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

                <TextBlock
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PackageEmpty')}"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(AppManagerDataCollection.Count), Mode=OneWay}" />

                <TextBlock
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Text="{x:Bind sys:String.Format(PackageCountInfo, AppManagerDataCollection.Count), Mode=OneWay}"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppManagerDataCollection.Count), Mode=OneWay}" />

                <StackPanel
                    Grid.Column="4"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Orientation="Horizontal"
                    Spacing="2">

                    <AppBarButton
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppManager/Sort')}"
                        Style="{StaticResource AppBarButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/SortToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8CB;" />
                        </AppBarButton.Icon>

                        <AppBarButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortWay')}">

                                    <ToggleMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortWayClicked}"
                                        IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                        Tag="True"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortIncrease')}" />

                                    <ToggleMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortWayClicked}"
                                        IsChecked="{x:Bind IsIncrease.Equals(x:False), Mode=OneWay}"
                                        Tag="False"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortDecrease')}" />
                                </MenuFlyoutSubItem>

                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortRule')}">

                                    <ToggleMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortRuleClicked}"
                                        IsChecked="{x:Bind sys:Object.Equals(SelectedRule, enum:AppSortRuleKind.DisplayName), Mode=OneWay}"
                                        Tag="{x:Bind enum:AppSortRuleKind.DisplayName}"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortByDisplayName')}" />

                                    <ToggleMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortRuleClicked}"
                                        IsChecked="{x:Bind sys:Object.Equals(SelectedRule, enum:AppSortRuleKind.PublisherName), Mode=OneWay}"
                                        Tag="{x:Bind enum:AppSortRuleKind.PublisherName}"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortByPublisher')}" />

                                    <ToggleMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortRuleClicked}"
                                        IsChecked="{x:Bind sys:Object.Equals(SelectedRule, enum:AppSortRuleKind.InstallDate), Mode=OneWay}"
                                        Tag="{x:Bind enum:AppSortRuleKind.InstallDate}"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SortByInstalledDate')}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppManager/Filter')}"
                        Style="{StaticResource AppBarButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/FilterToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE71C;" />
                        </AppBarButton.Icon>

                        <AppBarButton.Flyout>
                            <Flyout
                                Closed="{x:Bind OnClosed}"
                                Placement="Bottom"
                                ShouldConstrainToRootBounds="False"
                                SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}">

                                <Flyout.FlyoutPresenterStyle>
                                    <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Flyout.FlyoutPresenterStyle>

                                <StackPanel Padding="12" Spacing="5">
                                    <TextBlock
                                        Margin="2,0,0,0"
                                        FontSize="14"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/AppType')}" />

                                    <ToggleButton
                                        Click="{x:Bind OnFilterWayClicked}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/FrameworkPackage')}"
                                        IsChecked="{x:Bind IsAppFramework, Mode=OneWay}" />

                                    <MenuFlyoutSeparator Margin="4,0,6,0" Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

                                    <TextBlock
                                        Margin="2,0,0,0"
                                        FontSize="14"
                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureType')}" />

                                    <Grid ColumnSpacing="5" RowSpacing="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <ToggleButton
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Stretch"
                                            Click="{x:Bind OnSignatureRuleClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureStore')}"
                                            IsChecked="{x:Bind IsStoreSignatureSelected, Mode=OneWay}"
                                            Tag="{x:Bind applicationModel:PackageSignatureKind.Store}" />

                                        <ToggleButton
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Stretch"
                                            Click="{x:Bind OnSignatureRuleClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureSystem')}"
                                            IsChecked="{x:Bind IsSystemSignatureSelected, Mode=OneWay}"
                                            Tag="{x:Bind applicationModel:PackageSignatureKind.System}" />

                                        <ToggleButton
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            Click="{x:Bind OnSignatureRuleClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureEnterprise')}"
                                            IsChecked="{x:Bind IsEnterpriseSignatureSelected, Mode=OneWay}"
                                            Tag="{x:Bind applicationModel:PackageSignatureKind.Enterprise}" />

                                        <ToggleButton
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            HorizontalAlignment="Stretch"
                                            Click="{x:Bind OnSignatureRuleClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureDeveloper')}"
                                            IsChecked="{x:Bind IsDeveloperSignatureSelected, Mode=OneWay}"
                                            Tag="{x:Bind applicationModel:PackageSignatureKind.Developer}" />

                                        <ToggleButton
                                            Grid.Row="0"
                                            Grid.Column="4"
                                            HorizontalAlignment="Stretch"
                                            Click="{x:Bind OnSignatureRuleClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureNone')}"
                                            IsChecked="{x:Bind IsNoneSignatureSelected, Mode=OneWay}"
                                            Tag="{x:Bind applicationModel:PackageSignatureKind.None}" />
                                    </Grid>
                                </StackPanel>
                            </Flyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnRefreshClicked}"
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppManager/Refresh')}"
                        Style="{StaticResource AppBarButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/RefreshToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="LoadingGrid"
                Grid.Row="1"
                Margin="30,3,30,0"
                Padding="16,12"
                x:Load="{x:Bind IsLoadedCompleted.Equals(x:False), Mode=OneWay}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">

                    <ProgressRing IsActive="True" IsEnabled="True" />

                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/LoadingPackage')}"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>

            <Grid
                Grid.Row="2"
                Margin="0,3,0,0"
                Visibility="{x:Bind IsLoadedCompleted, Mode=OneWay}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="30,0"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind IsPackageEmpty, Mode=OneWay}">

                    <TextBlock
                        Margin="0,10,0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PackageEmptyDescription')}"
                        TextAlignment="Center" />
                </Grid>

                <Grid Grid.Row="1" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsPackageEmpty), Mode=OneWay}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Margin="30,0"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(AppManagerDataCollection.Count), Mode=OneWay}">
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PackageEmptyWithConditionDescription')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        Padding="30,0,30,30"
                        ItemsSource="{x:Bind AppManagerDataCollection, Mode=OneWay}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.HorizontalScrollMode="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollMode="Enabled"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppManagerDataCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0,1" />
                                <Setter Property="MinHeight" Value="0 " />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="appManager:PackageModel">
                                <ItemContainer Margin="0,0,0,1">
                                    <Grid>
                                        <Grid
                                            Height="60"
                                            Padding="16,12"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            ColumnSpacing="10"
                                            CornerRadius="{StaticResource ControlCornerRadius}">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                MinWidth="50"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{x:Bind DisplayName}"
                                                TextAlignment="Left"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <TextBlock>
                                                            <Run Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DisplayNameToolTip')}" />
                                                            <Run Text="{x:Bind DisplayName}" />
                                                        </TextBlock>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Column="1"
                                                MinWidth="50"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{x:Bind PublisherName}"
                                                TextAlignment="Left"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <TextBlock>
                                                            <Run Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PublisherNameToolTip')}" />
                                                            <Run Text="{x:Bind PublisherName}" />
                                                        </TextBlock>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Column="2"
                                                MinWidth="50"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                HorizontalTextAlignment="Left"
                                                Text="{x:Bind Version}"
                                                TextAlignment="Left"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <TextBlock>
                                                            <Run Text="{x:Bind root:ResourceService.GetLocalized('AppManager/VersionToolTip')}" />
                                                            <Run Text="{x:Bind Version}" />
                                                        </TextBlock>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Column="3"
                                                MinWidth="50"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                HorizontalTextAlignment="Left"
                                                Text="{x:Bind InstallDate}"
                                                TextAlignment="Left"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <TextBlock>
                                                            <Run Text="{x:Bind root:ResourceService.GetLocalized('AppManager/InstallDateToolTip')}" />
                                                            <Run Text="{x:Bind InstallDate}" />
                                                        </TextBlock>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <StackPanel
                                                Grid.Column="4"
                                                Height="30"
                                                BorderBrush="{ThemeResource ButtonBorderBrush}"
                                                BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                                                CornerRadius="{ThemeResource ControlCornerRadius}"
                                                Orientation="Horizontal">

                                                <Button
                                                    VerticalAlignment="Stretch"
                                                    VerticalContentAlignment="Center"
                                                    BorderThickness="0,0,1,0"
                                                    Command="{StaticResource ViewInformationCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="{x:Bind root:ResourceService.GetLocalized('AppManager/View')}"
                                                    CornerRadius="0"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/ViewToolTip')}" />

                                                <Button
                                                    Width="35"
                                                    VerticalAlignment="Stretch"
                                                    BorderThickness="0"
                                                    CornerRadius="0"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/FastOperationToolTip')}">

                                                    <Button.Content>
                                                        <AnimatedIcon
                                                            Width="12"
                                                            Height="12"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            AutomationProperties.AccessibilityView="Raw">
                                                            <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                            <AnimatedIcon.FallbackIconSource>
                                                                <FontIconSource
                                                                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                    FontSize="8"
                                                                    Glyph="&#xE96E;"
                                                                    IsTextScaleFactorEnabled="False" />
                                                            </AnimatedIcon.FallbackIconSource>
                                                        </AnimatedIcon>
                                                    </Button.Content>

                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="Bottom">
                                                            <MenuFlyoutItem
                                                                Height="32"
                                                                Padding="11,0"
                                                                Command="{StaticResource OpenAppCommand}"
                                                                CommandParameter="{x:Bind Package}"
                                                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenApp')}"
                                                                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppListEntryCount)}" />

                                                            <MenuFlyoutItem
                                                                Height="32"
                                                                Padding="11,0"
                                                                Command="{StaticResource OpenStoreCommand}"
                                                                CommandParameter="{x:Bind Package}"
                                                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenStore')}"
                                                                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsStorePackage(SignatureKind)}" />

                                                            <MenuFlyoutItem
                                                                Height="32"
                                                                Padding="11,0"
                                                                Command="{StaticResource OpenManifestCommand}"
                                                                CommandParameter="{x:Bind Package}"
                                                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenManifest')}" />

                                                            <MenuFlyoutSubItem
                                                                Height="32"
                                                                Padding="11,0"
                                                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenFolder')}">

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource OpenInstalledFolderCommand}"
                                                                    CommandParameter="{x:Bind Package}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenInstalledFolder')}" />

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource OpenCacheFolderCommand}"
                                                                    CommandParameter="{x:Bind Package}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenCacheFolder')}" />
                                                            </MenuFlyoutSubItem>

                                                            <MenuFlyoutItem
                                                                Height="32"
                                                                Padding="11,0"
                                                                Command="{StaticResource UnInstallCommand}"
                                                                CommandParameter="{x:Bind Package}"
                                                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/UnInstall')}"
                                                                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsNotSystemPackage(SignatureKind)}" />
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <ProgressBar
                                            Margin="16,0"
                                            VerticalAlignment="Bottom"
                                            IsIndeterminate="True"
                                            Visibility="{x:Bind IsUnInstalling, Mode=OneWay}" />
                                    </Grid>
                                </ItemContainer>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 2), Mode=OneWay}">

            <ScrollViewer Margin="0,5,0,0">
                <StackPanel Margin="30,0,30,30" Spacing="3">
                    <Expander
